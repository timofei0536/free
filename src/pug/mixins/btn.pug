mixin btn(params)
	if params.link
		a.btn(class=params.class href=params.link target=params.target).cursor-hover
			+btn-content(params)
	else 
		.btn(class=params.class).cursor-hover
			+btn-content(params)

mixin btn-content(params)
	
	if params.text2
		.btn__texts
			span.btn__text #{params.text}
			span.btn__text2 #{params.text2}
	else
		span.btn__text #{params.text}
	if params.arrow
		.btn__arrow
			div
				div
					svg(width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg")
						path(d="M1.39876 2.49218L10.3424 2.53456L0 12.6226L1.48353 14.0637L11.9107 3.89094L11.9531 12.7074L14.03 10.7152L13.9876 0.5H3.47571L1.39876 2.49218Z" fill="#0D0F1A")


